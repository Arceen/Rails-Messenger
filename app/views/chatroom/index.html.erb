<h2 class="ui center aligned icon header">
  <i class="circular coffee orange icon"></i>
  Say something
</h2>

<div class = "ui two column grid">
    <div class = "twelve wide column">
        <div class = "ui fluid raised card chatbox">
            <div class = "content" id = "messages">
                <div id="message-container" class="ui feed">
                    <%= render @messages %>
                    
                </div>
                
            </div>
            <div class="extra content">
                <%= form_for(:mossage, html: {class:"ui reply form", role:"form"}, url: message_path, remote: true) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%# <input type="text" placeholder="Enter a message..."> %>
                            <%= f.text_field :body, placeholder: "Enter a message..."%>
                            <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
                            
                        </div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
    <div class ="four wide column">
        <div class ="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="active item">
                        <%= session[:username]%>
                    </a>
                    <% session[:all_users].each do |x| %>
                        <a class="item">
                            <%= x[:username] %>
                        </a>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
